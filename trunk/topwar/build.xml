<project name="topwar" default="targetPadrao">

	<property environment="env" />
	<path id="classpath.compilacao">
		<fileset dir="${env.TOMCAT_HOME}/lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="WebContent/WEB-INF/lib">
			<include name="*.jar" />
		</fileset>
		<pathelement location="build" />
	</path>

	<target name="targetPadrao" depends="atualizaVersao,copiaRecursos,compilarClasses,criarJar,atualizaLib,criarWar">
	</target>

	<target name="atualizaVersao">
		<propertyfile file="src/br/applet/client.properties">
			<entry operation="+" key="versao" type="int" value="1" />
		</propertyfile>
	</target>

	<target name="compilarClasses">
		<javac destdir="build" srcdir="src" nowarn="true" optimize="true">
			<classpath refid="classpath.compilacao" />
		</javac>
	</target>

	<target name="copiaRecursos">
		<delete dir="build" />
		<mkdir dir="build" />
		<copy todir="build" verbose="true">
			<fileset dir="src">
				<exclude name=".*" />
				<exclude name=".*/" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="criarJar">
		<jar jarfile="topwar.jar" compress="true" manifest="WebContent/META-INF/MANIFEST.MF">
			<fileset dir="build">
				<exclude name=".*" />
				<exclude name=".*/" />
				<exclude name="**/*.java" />
				<exclude name="build.xml" />
				<exclude name="log4j.properties" />
			</fileset>
		</jar>
	</target>

	<target name="atualizaLib">
		<delete file="WebContent/WEB-INF/lib/topwar.jar" failonerror="no" />
		<delete file="WebContent/topwar.jar" failonerror="no" />
		<copy file="topwar.jar" todir="WebContent" />
		<copy file="topwar.jar" todir="WebContent/WEB-INF/lib" />
		<delete file="topwar.jar" />
	</target>

	<target name="criarWar" depends="">
		<delete dir="${env.TOMCAT_HOME}/webapps/topwar" />
		<war compress="on" destfile="${env.TOMCAT_HOME}/webapps/topwar.war">
			<fileset dir="WebContent">
				<exclude name="**/*.jar" />
			</fileset>
			<fileset dir="WebContent">
				<include name="WEB-INF/lib/topwar.jar" />
			</fileset>
		</war>
	</target>
</project>